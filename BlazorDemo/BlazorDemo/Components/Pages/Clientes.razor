@page "/clientes"
@using BlazorDemo.Shared.Entities
@rendermode InteractiveServer

<div class="container">
    <div class="row">
        <div class="col-md-10">
            <div class="card">
                <div class="card">
                    <div class="card-header">
                        <button class="btn btn-primary float-end" @onclick="Add">Novo cliente</button>
                    </div>
                </div>
                @if(ListaClientes.Count > 0)
                {
                    <div class="card-header">Lista de clientes</div>
                    <div class="card-body">
                        <table class="table table-dark table-striped">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Nome</th>
                                    <th>Email</th>
                                    <th>Idade</th>
                                    <th>Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach(var cliente in ListaClientes)
                                {
                                    <tr>
                                        <td>@cliente.Id</td>
                                        <td>@cliente.Name</td>
                                        <td>@cliente.Email</td>
                                        <td>@cliente.Idade</td>
                                        <td>
                                            <div class="hstack gap-2">
                                                <button class="btn btn-info" @onclick="()=>Edit(cliente)">Editar</button>
                                                <button class="btn btn-danger" @onclick="()=>Excluir(cliente.Id)">Excluir</button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table></div>
                }
            </div>
        </div>
    </div>

</div>
@code {
    private List<Cliente> ListaClientes { get; set; } = new();

    private async Task CarregaClientes()
    {
        var clientes = await _clienteRepository.GetAllClientesAsync();
        ListaClientes?.Clear();
        if (ListaClientes is null) return;
        foreach(var cliente in clientes)
        {
            ListaClientes.Add(cliente);
        }
    }

    protected override async Task OnInitializedAsync()
    {
        await CarregaClientes();
    }

    private void Add()
    {
        _navigation.NavigateTo("manutencaocliente");
    }

    private void Edit(Cliente model)
    {
        _navigation.NavigateTo($"manutencaocliente/{model.Id}");
    }

    private async Task Excluir(int id)
    {
        var cliente = await _clienteRepository.DeleteClienteAsync(id);
        await CarregaClientes();
    }

}